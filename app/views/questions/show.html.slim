.question_container.text-center
  .container
    .row
      .col-8
        = link_to @question.user.name, user_path(@question.user.id)
      .col-4
        -if current_user == @question.user
          = link_to icon('fas', 'trash-alt'), question_path(@question.id), method: :delete, class: "delete-q-#{@question.id}"
  br
  p
    | タイトル:#{@question.title}
  br
  p
    | 内容:#{@question.content}

/回答送信フォーム
- if user_signed_in?
  .text-center
    = form_for [@question, @answer] do |f|
      = render 'shared/error_messages', model: f.object
      .form-group
        = f.text_area :content
      .form-group
        = f.submit '回答する', class: 'btn btn-primary'

/回答表示
= @answers&.each do |answer|
  .answer_container.text-center
    p= link_to answer.user.name, user_path(answer.user.id)
    p= answer.content
    - if current_user == answer.user
      = link_to icon('fas', 'trash-alt'), question_answer_path(id: answer.id, 
                                                              question_id: @question.id), method: :delete, class: "delete-a-#{answer.id}"
